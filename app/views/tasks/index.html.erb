<% if logged_in? %>
  <p>ログイン完了ユーザー: <%= current_user.name %></p>
  <aside>
    <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <ul style="list-style: none; padding-left: 0;">
            <li>ステータス: <%= f.text_area :status, class: 'form-control', rows: 1 %></li>
          </ul>
        </div>
        <div class="form-group">
          <ul style="list-style: none; padding-left: 0;">
            <li>タスク: <%= f.text_area :content, class: 'form-control', rows: 1 %></li>
          </ul>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    <div>
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
<% else %>
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
  <% end %>
</ul>

<div><%= link_to 'Logout', logout_path, method: :delete %></div>