<ul>
  <% tasks.each do |task| %>
    <li>
      <div class="media-body">
        <div>
          <%= link_to task.user.name, root_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p><%= task.content %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>